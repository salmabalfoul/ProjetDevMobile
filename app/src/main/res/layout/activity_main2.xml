<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <RelativeLayout
        android:layout_width="386dp"
        android:layout_height="774dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="-6dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="420dp"
            android:layout_height="72dp"
            android:layout_marginTop="-10dp"
            app:srcCompat="@drawable/gratuit"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-12dp"
            tools:layout_editor_absoluteY="-13dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vous etes:"
            android:textSize="19dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="99dp"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="80dp"/>


        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="70dp"
            android:text="Recruteur cherche des cv et pose des annonces de travail"
            android:textSize="10dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="90dp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Candidat des annonces et pose des cv"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="138dp"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="100dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="200dp"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:textSize="19dp"/>

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="200dp"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="170dp"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ville:"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="294dp"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="270dp"
            android:textSize="19dp" />

        <Spinner
            android:id="@+id/spinner_villes"
            android:layout_width="240dp"
            android:layout_height="67dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="80dp"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe:"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="347dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="10dp"
            android:textSize="19dp"/>

        <EditText
            android:id="@+id/editTextTextPassword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="350dp"
            android:ems="10"
            android:hint="choisissez un mot de passe"
            android:inputType="textPassword"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="115dp"
            tools:layout_editor_absoluteY="333dp" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="274dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="450dp"
            android:text="(Au moins 5 caracters) choisissez un mot de passe qui n’est pas facile à deviner"
            android:textSize="15dp"
            tools:ignore="MissingConstraints"

            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="417dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="460dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="550dp"
            android:text="Confirmer le mot de passe:"
            android:textSize="12dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="536dp" />

        <EditText
            android:id="@+id/editTextTextPassword3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="508dp"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="550dp"/>

        <View
            android:id="@+id/background_bar"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_alignParentBottom="true"
            android:background="#009688" />

        <TextView
            android:id="@+id/text_above_bar"
            android:layout_width="241dp"
            android:layout_height="43dp"
            android:layout_above="@id/background_bar"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="-55dp"
            android:padding="2dp"
            android:text="En validant mon inscription,jaccepte lees conditions generales du alkhad.ma"
            android:textColor="#0C0C0C"
            android:textSize="10dp" />

        <Button
            android:id="@+id/creer"
            android:layout_width="132dp"
            android:layout_height="70dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="705dp"
            android:background="@color/black"
            android:text="creer compte"
            android:padding="2dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>